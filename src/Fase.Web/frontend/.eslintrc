{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "Promise": true,
    "google": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "rules": {
    "indent": [
      "warn",
      4
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "strict": [
      "warn",
      "function"
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "info",
          "warn",
          "error"
        ]
      }
    ],
    "no-unused-vars": [
      "warn"
    ],
    "jsx-a11y/label-has-for": [ 2, {
      "required": {
        "every": [ "nesting", "id" ]
      },
      "allowChildren": true
    }]
  },
  "plugins": [
    "jsx-a11y"
  ]
}